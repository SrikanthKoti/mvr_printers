<section class="bg-white dark:bg-gray-900 rounded-3xl overflow-hidden py-16 px-12 flex flex-col lg:flex-row items-center justify-between gap-12">
  <div class="lg:w-1/3 flex justify-center gap-4">
    {{#each site.promo.leftImages}}
    <img alt="{{alt}}" class="w-40 h-80 object-cover rounded-2xl {{#unless @first}}mt-8{{/unless}}" src="{{src}}"/>
    {{/each}}
  </div>
  <div class="lg:w-1/3 text-center space-y-6">
    <h2 class="text-5xl font-extrabold">{{site.promo.headline}}</h2>
    <p class="text-gray-500 uppercase tracking-widest font-bold">{{site.promo.subtext}}<br/>{{site.promo.minPurchase}}</p>
    <button class="bg-primary text-white px-10 py-4 rounded-full font-bold flex items-center gap-4 mx-auto hover:scale-105 transition-transform">
      {{site.promo.buttonText}} <span class="material-symbols-outlined text-sm">{{site.promo.buttonIcon}}</span>
    </button>
  </div>
  <div class="lg:w-1/3 flex justify-center gap-4">
    {{#each site.promo.rightImages}}
    <img alt="{{alt}}" class="w-40 h-80 object-cover rounded-2xl {{#if @first}}mt-8{{/if}}" src="{{src}}"/>
    {{/each}}
  </div>
</section>
