<section class="grid grid-cols-1 md:grid-cols-3 gap-4">
  {{#each site.threeColumnStrip.images}}
  <div class="rounded-2xl overflow-hidden h-64">
    <img alt="{{alt}}" class="w-full h-full object-cover" src="{{src}}"/>
  </div>
  {{/each}}
  <div class="bg-white dark:bg-gray-900 rounded-2xl p-8 flex flex-col justify-center items-center text-center space-y-4">
    <h3 class="text-2xl font-bold">{{site.threeColumnStrip.techCard.title}}</h3>
    <button class="bg-primary text-white px-6 py-2 rounded-full text-sm font-semibold hover:bg-gray-800 transition-colors">
      {{site.threeColumnStrip.techCard.buttonText}}
    </button>
  </div>
</section>
