<section class="text-center">
  <h2 class="text-4xl font-extrabold mb-2">{{site.topServices.sectionTitle}}</h2>
  <p class="text-gray-500 mb-12">{{site.topServices.sectionSubtitle}}</p>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
    {{#each site.topServices.items}}
    <div class="bg-white dark:bg-gray-900 rounded-2xl p-4 group cursor-pointer border border-transparent hover:border-gray-200 dark:hover:border-gray-700 transition-all text-left">
      <div class="bg-gray-50 dark:bg-gray-800 rounded-xl mb-4 overflow-hidden h-64 flex items-center justify-center p-8">
        <img alt="{{alt}}" class="max-h-full group-hover:scale-110 transition-transform duration-500" src="{{image}}"/>
      </div>
      <div class="px-2">
        <h4 class="font-bold text-lg">{{title}}</h4>
        <p class="text-gray-500 font-medium text-sm">From {{priceFrom}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</section>
