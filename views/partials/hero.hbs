<section class="grid grid-cols-1 lg:grid-cols-2 gap-4">
  <div class="bg-white dark:bg-gray-900 rounded-2xl p-12 flex flex-col justify-center relative overflow-hidden">
    <div class="relative z-10">
      <h2 class="text-6xl font-extrabold text-primary dark:text-white leading-[1.1] mb-6">
        {{site.hero.headline}}
      </h2>
      <p class="text-gray-500 dark:text-gray-400 text-lg mb-8 max-w-md">
        {{site.hero.subheadline}}
      </p>
      <a class="bg-primary text-white px-8 py-4 rounded-full font-bold flex items-center gap-4 hover:opacity-90 transition-opacity inline-flex" href="{{site.hero.ctaHref}}">
  {{site.hero.ctaText}} <span class="material-symbols-outlined text-sm">{{site.hero.ctaIcon}}</span>
</a>
      <div class="mt-16 flex items-center gap-4">
        <div class="flex -space-x-3">
          {{#each site.hero.customerAvatars}}
          <img alt="{{alt}}" class="w-10 h-10 rounded-full border-2 border-white dark:border-gray-900" src="{{src}}"/>
          {{/each}}
        </div>
        <div class="text-sm">
          <p class="font-bold">{{site.hero.testimonial.label}}</p>
          <p class="text-gray-400 text-xs italic">"{{site.hero.testimonial.quote}}"</p>
        </div>
      </div>
    </div>
  </div>
  <div class="h-[600px] rounded-2xl overflow-hidden relative group">
    <img alt="{{site.hero.heroImage.alt}}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-700" src="{{site.hero.heroImage.src}}"/>
  </div>
</section>
