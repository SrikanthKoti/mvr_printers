<footer class="bg-white dark:bg-gray-950 pt-24 pb-12 mt-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12 mb-16">
      <div class="lg:col-span-2 space-y-6">
        <h2 class="text-2xl font-extrabold uppercase tracking-tighter">{{site.footer.brandName}}</h2>
        <p class="text-gray-500 max-w-sm leading-relaxed">{{site.footer.tagline}}</p>
        <div class="flex gap-4">
          {{#each site.footer.socialLinks}}
          <a class="w-8 h-8 rounded-full bg-gray-100 dark:bg-gray-800 flex items-center justify-center hover:bg-primary hover:text-white transition-all" href="{{href}}">
            <img alt="{{name}}" class="w-4 h-4" src="{{iconUrl}}"/>
          </a>
          {{/each}}
        </div>
      </div>
      <div>
        <h4 class="font-bold mb-6">{{site.footer.about.heading}}</h4>
        <ul class="space-y-4 text-gray-500 text-sm">
          {{#each site.footer.about.links}}
          <li><a class="hover:text-primary" href="{{href}}">{{label}}</a></li>
          {{/each}}
        </ul>
      </div>
      <div>
        <h4 class="font-bold mb-6">{{site.footer.help.heading}}</h4>
        <ul class="space-y-4 text-gray-500 text-sm">
          {{#each site.footer.help.links}}
          <li><a class="hover:text-primary" href="{{href}}">{{label}}</a></li>
          {{/each}}
        </ul>
      </div>
      <div>
        <h4 class="font-bold mb-6">{{site.footer.menu.heading}}</h4>
        <ul class="space-y-4 text-gray-500 text-sm">
          {{#each site.footer.menu.links}}
          <li><a class="hover:text-primary" href="{{href}}">{{label}}</a></li>
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="pt-8 border-t border-gray-200 dark:border-gray-800 flex flex-col md:flex-row justify-between items-center text-xs text-gray-400">
      <p>{{site.footer.copyright}}</p>
      <div class="flex gap-6 mt-4 md:mt-0">
        {{#each site.footer.legalLinks}}
        <a class="hover:text-primary" href="{{href}}">{{label}}</a>
        {{/each}}
      </div>
    </div>
  </div>
</footer>
